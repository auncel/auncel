{
  "compilerOptions": {
    "module": "es2015",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@surpass/common/*": ["../common/*"],
    },
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "fixtures/**/*",
    "lib/**/*",
    "test/**/*",
    "@surpass/**/*",
    "node_modules/@surpass/**/*",
    "node_modules/@dovyih/**/*",
  ],
  "exclude": ["node_modules", "dist"]
}
