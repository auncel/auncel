{
  "compilerOptions": {
    "module": "es2015",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@utils/*": [ "./utils/*" ],
      "@css/*": [ "../../css/*"]
    }
  },
  "include": [
    "fixtures/**/*",
    "lib/**/*",
    "@feoj/**/*",
    "node_modules/@feoj/**/*",
  ],
  "exclude": ["node_modules", "dist"]
}
