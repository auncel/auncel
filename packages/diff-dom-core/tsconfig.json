{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@feoj/common/*": [ "../../common/*" ],
      "@utils/*": [ "./utils/*" ],
      "@css/*": [ "../../css/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
