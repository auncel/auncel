{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // https://github.com/facebook/jest/issues/8218#issuecomment-486464992
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "lib/**/*",
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "lib/diffCore/"]
}