{
  "compilerOptions": {
    "module": "es2015",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@feoj/common/*": ["../common/*"],
    },
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "fixtures/**/*",
    "lib/**/*",
    "@feoj/**/*",
    "node_modules/@feoj/**/*",
  ],
  "exclude": ["node_modules", "dist"]
}
